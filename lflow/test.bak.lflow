sumar2 = function(par1, par2)
  return par1+par2
end

local t=0
reloj = function()
  t=t+1
  return t%60, _G.math.floor(t/60)
end

local seccount=-1
segundos = function()
  seccount=(seccount+1) % 60
  return seccount
end

local mincount=-1
minutos = function(s)
  if s==0 then 
    mincount=mincount+1
    return mincount
  end
end

